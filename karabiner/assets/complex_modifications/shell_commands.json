{
  "title": "Shell Commands",
  "rules": [
    {
      "description": "Launch Terminal",
      "manipulators": [
        {
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Kitty.app'"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Sleep computer",
      "manipulators": [
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "pmset sleepnow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
