#!/bin/sh

source print_helper

if test ! $(which rbenv)
then
  info "Installing rbenv..."
  brew install rbenv
  brew install ruby-build

  info 'Installing latest ruby version...'
  rbenv install 2.3.4
  rbenv global 2.3.4

  info 'Installing bundler'
  gem install bundler

  info 'Installing ruby checkers'
  gem install rubocop reek
fi

exit 0
