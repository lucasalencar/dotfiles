#!/bin/bash
source print_helper

link_files () {
  ln -sf "$1" "$2"
  info "Linked $1 to $2"
}

current_dir () {
  CURRENT_DIR="$(cd "$(dirname "$0")" && pwd)"
}

link_all_files () {
  for source in `find $1 -maxdepth 1 -name \*.symlink`
  do
    dest="$HOME/.`basename \"${source%.*}\"`"
    link_files "$source" "$dest"
  done
}

command_exists () {
  command -v "$1" &> /dev/null
}

ensure_command_exists () {
  if ! command_exists "$1"
  then
    fail "Command line '$1' not found"
  fi
}

bundle_current_dir() {
  current_dir
  brew bundle --file="$CURRENT_DIR/Brewfile"
}
