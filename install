#!/usr/bin/env bash
#
# Installation process

source helpers

DOTFILES_ROOT=$(pwd -P)

# Install some essential softwares
packages=(osx terminal.app homebrew git zsh apps essentials tmux vim nvim karabiner)
for package in "${packages[@]}"; do
  info "Setting up $package package..."
  $DOTFILES_ROOT/$package/install
done
unset file

success 'All done! :D'

exit 0
