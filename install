#!/usr/bin/env bash
#
# Installation process

source helpers

DOTFILES_ROOT=$(pwd -P)

# Look for packages file to know which packages are going to be installed
while read package; do
  info "Setting up $package package..."
  $DOTFILES_ROOT/$package/install
done < "$DOTFILES_ROOT/packages"
unset package

success 'All done! :D'

exit 0
